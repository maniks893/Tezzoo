<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentMoadeActivity"
    android:background="@drawable/image_two"
    android:gravity="center"
    android:layout_gravity="center"
    android:src="@drawable/background2">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PAYMENT MODE"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/background2"
            android:layout_marginTop="30dp"
            >

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background2"
                android:text="Pay UPI"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="normal"
                android:layout_marginRight="20dp"/>

            <Button
                android:id="@+id/btn_upi"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"

                android:background="@drawable/backg_2"
                android:text="PAY NOW"
                android:textColor="#2BC0D1"

                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/background2"
            android:layout_marginTop="22dp"
            >

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background2"
                android:text="PayPal"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="25dp"
                android:textStyle="normal"
                android:layout_marginRight="20dp"/>

            <Button
                android:id="@+id/btn_paypal"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/backg_2"
                android:text="PAY NOW"
                android:textColor="#2BC0D1"

                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_qrgn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/backg_2"
                android:gravity="center"
                android:text="GENERATE QR CODE \n(After Payment)"
                android:textSize="20sp"
                android:textStyle="bold"


                />


        </LinearLayout>


    </LinearLayout>



</LinearLayout>